enum UserRole {
    ADMIN
    CUSTOMER
}

model User {
    id         String    @id @default(uuid())
    email      String    @unique
    first_name String
    last_name  String
    imageUrl   String
    password   String
    role       UserRole
    created_at DateTime? @default(now())
    updated_at DateTime? @updatedAt
    deleted_at DateTime?
    Products   Product[]
}

model Product {
    id         String    @id @default(uuid())
    user       User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
    user_id    String
    name       String
    price      Float
    imageUrl   String
    created_at DateTime? @default(now())
    updated_at DateTime? @updatedAt
    deleted_at DateTime?
}
